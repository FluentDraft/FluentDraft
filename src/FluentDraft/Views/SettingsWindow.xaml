<Window x:Class="FluentDraft.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FluentDraft.Converters"
        xmlns:viewmodels="clr-namespace:FluentDraft.ViewModels"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance viewmodels:SettingsViewModel}"
        Title="Settings" Height="550" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Padding="15,10" Background="Transparent" Cursor="Hand" Margin="0,0,5,2" MinWidth="140">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Left" TextElement.Foreground="#AAA" TextElement.FontSize="14"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#252525"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007AFF"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="4,0,0,0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#222"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
         <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        
        <!-- Dark ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              Margin="8,4,24,4" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox" 
                                     Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"
                                     Background="Transparent" Foreground="White" BorderThickness="0"
                                     Margin="4,0,24,0" VerticalAlignment="Center"
                                     CaretBrush="White"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" Background="#252525" BorderBrush="#444" BorderThickness="1" CornerRadius="4" MaxHeight="250">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dark ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#007AFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0056B3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="#181818" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="60"/>   <!-- Footer -->
            </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#202020" Padding="20,15" MouseLeftButtonDown="Header_MouseDown" CornerRadius="8,8,0,0">
            <Grid>
                <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <Button Command="{Binding CloseSettingsCommand}" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="#AAA" FontSize="14" Content="✕" Cursor="Hand" Click="CloseButton_Click"/>
            </Grid>
        </Border>

         <!-- Main Content -->
        <Grid Grid.Row="1">
            <TabControl Background="Transparent" BorderThickness="0" TabStripPlacement="Left" Margin="0,20,0,0">
                
                <!-- 1. Speech Tab -->
                <TabItem Header="Speech">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Speech Setup" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Configure how FluentDraft listens to you." Foreground="#888" FontSize="12" Margin="0,0,0,20"/>
                            
                            <!-- Microphone -->
                            <TextBlock Text="Microphone" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="Select the input device to record from." Foreground="#666" FontSize="11" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding AudioDevices}" 
                                      DisplayMemberPath="ProductName" 
                                      SelectedValuePath="DeviceNumber"
                                      SelectedValue="{Binding SelectedAudioDevice}"
                                      Margin="0,0,0,20"/>

                            <!-- Hotkey -->
                            <TextBlock Text="Hotkey" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="Press this key combination to start recording." Foreground="#666" FontSize="11" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Background="#333" CornerRadius="4" Padding="8" MinWidth="100">
                                    <TextBlock Text="{Binding HotkeyDisplay}" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                </Border>
                                <Button Content="Set" Margin="10,0,0,0" Padding="15,5" 
                                        Command="{Binding StartRecordingHotkeyCommand}"
                                        Background="#444" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </StackPanel>
                            
                            <CheckBox IsChecked="{Binding IsHotkeySuppressionEnabled}" Content="Block original key function" Foreground="White" Margin="0,0,0,20"/>
                            <TextBlock Text="Prevents the key from working in other apps (e.g. stops Caps Lock from toggling)." Foreground="#666" FontSize="11" Margin="24,-15,0,20" TextWrapping="Wrap"/>

                            <!-- Activation -->
                            <TextBlock Text="Recording Mode" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <StackPanel Margin="0,0,0,20">
                                <RadioButton GroupName="Activation" Content="Toggle (Tap to Start/Stop)" Foreground="White" Margin="0,0,0,5"
                                             IsChecked="{Binding ActivationMode, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"/>
                                <TextBlock Text="Press once to start, press again to stop." Foreground="#666" FontSize="11" Margin="20,0,0,10"/>
                                
                                <RadioButton GroupName="Activation" Content="Hold (Push to Talk)" Foreground="White" Margin="0,0,0,5"
                                             IsChecked="{Binding ActivationMode, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"/>
                                <TextBlock Text="Hold the key down while speaking." Foreground="#666" FontSize="11" Margin="20,0,0,0"/>
                            </StackPanel>

                            <!-- Transcription Model -->
                            <TextBlock Text="Transcription Engine" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="The AI model that converts your speech to text." Foreground="#666" FontSize="11" Margin="0,0,0,5"/>
                            
                            <TextBlock Text="Provider" Foreground="#888" Margin="0,5,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailableTranscriptionProfiles}" 
                                      SelectedItem="{Binding SelectedTranscriptionProfile, Mode=TwoWay}"
                                      DisplayMemberPath="Name"
                                      Margin="0,0,0,10"/>

                            <TextBlock Text="Model" Foreground="#888" Margin="0,0,0,2"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" IsEditable="True"
                                          ItemsSource="{Binding SelectedTranscriptionProfile.TranscriptionModels}"
                                          Text="{Binding SelectedTranscriptionProfile.TranscriptionModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,0,5,0"/>
                                <Button Grid.Column="1" Command="{Binding FetchModelsCommand}" CommandParameter="{Binding SelectedTranscriptionProfile}"
                                        Content="↻" Width="30" Background="#444" Foreground="White" BorderThickness="0" ToolTip="Fetch Models from Provider"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- 2. Refinement Tab -->
                <TabItem Header="Refinement">
                        <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: List -->
                        <Grid Grid.Column="0" Margin="0,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock Text="AI Refinement" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,5"/>
                                <CheckBox IsChecked="{Binding IsPostProcessingEnabled}" Content="Enable" Foreground="White" Margin="0,0,0,5"/>
                            </StackPanel>
                            
                            <ListBox Grid.Row="1" ItemsSource="{Binding RefinementPresets}" SelectedItem="{Binding SelectedEditingPreset}" 
                                     Background="#202020" BorderThickness="0" Foreground="White" Margin="0,0,0,10">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" Padding="5"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Grid.Row="2" Command="{Binding AddPresetCommand}" Content="+ Add Preset" 
                                    Background="#333" Foreground="White" BorderThickness="0" Padding="10,5" Cursor="Hand"/>
                        </Grid>

                        <!-- Right: Details Form -->
                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Visibility="{Binding SelectedEditingPreset, Converter={StaticResource NullToVis}}" Margin="0,20,20,20">
                                <TextBlock Text="Edit Preset" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Configure how the AI transforms your text." Foreground="#888" FontSize="12" Margin="0,0,0,15"/>

                                <TextBlock Text="Preset Name" Foreground="#888" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedEditingPreset.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

                                <TextBlock Text="Provider Profile" Foreground="#888" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableRefinementProfiles}" 
                                          SelectedValue="{Binding SelectedEditingPreset.ProfileId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="Name"
                                          Margin="0,0,0,15"/>

                                <TextBlock Text="Model" Foreground="#888" Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" IsEditable="True"
                                              ItemsSource="{Binding SelectedEditingPreset.AvailableModels}"
                                              Text="{Binding SelectedEditingPreset.Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              Margin="0,0,5,0"/>
                                    <Button Grid.Column="1" Command="{Binding FetchPresetModelsCommand}" CommandParameter="{Binding SelectedEditingPreset}"
                                            Content="↻" Width="30" Background="#444" Foreground="White" BorderThickness="0" ToolTip="Fetch Models"/>
                                </Grid>

                                <TextBlock Text="System Prompt" Foreground="#888" Margin="0,0,0,5"/>
                                <TextBlock Text="Instructions for the AI (e.g. 'Fix grammar', 'Translate to Spanish')." Foreground="#666" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedEditingPreset.SystemPrompt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Command="{Binding RemovePresetCommand}" CommandParameter="{Binding SelectedEditingPreset}"
                                            Content="Delete" Background="#FF453A" Foreground="White" Padding="15,6" BorderThickness="0"
                                            HorizontalAlignment="Left" Margin="0,0,10,0"/>
                                    
                                    <Button Command="{Binding ResetPresetCommand}" CommandParameter="{Binding SelectedEditingPreset}"
                                            Content="Reset Default" Background="#333" Foreground="#DDD" Padding="15,6" BorderThickness="0"
                                            HorizontalAlignment="Left"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                         
                        <TextBlock Grid.Column="1" Text="Select or add a preset to edit." Foreground="#666" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedEditingPreset}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </TabItem>
                
                <!-- 3. Services Tab -->
                <TabItem Header="Services">
                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- List Actions -->
                        <Grid Grid.Column="0" Margin="0,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock Text="Providers" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Manage API connections." Foreground="#888" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>

                            <ListBox Grid.Row="1" ItemsSource="{Binding Providers}" SelectedItem="{Binding SelectedEditingProvider}" 
                                     Background="#202020" BorderThickness="0" Foreground="White" Margin="0,0,0,10">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="*"/>
                                                 <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" Padding="5" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="✓" Foreground="LightGreen" FontWeight="Bold" 
                                                       Visibility="{Binding IsValidated, Converter={StaticResource BoolToVis}}" 
                                                       Margin="5,0,0,0" VerticalAlignment="Center" ToolTip="Validated"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Grid.Row="2" Command="{Binding AddProviderCommand}" Content="+ Add Provider" 
                                    Background="#333" Foreground="White" BorderThickness="0" Padding="10,5" Cursor="Hand"/>
                        </Grid>

                        <!-- Details Form -->
                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Visibility="{Binding SelectedEditingProvider, Converter={StaticResource NullToVis}}" Margin="0,20,20,20">
                                <TextBlock Text="Edit Provider" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Configure connection details." Foreground="#888" FontSize="12" Margin="0,0,0,15"/>

                                <TextBlock Text="Name" Foreground="#888" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedEditingProvider.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

                                <TextBlock Text="Type" Foreground="#888" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableProviderTypes}" 
                                          SelectedItem="{Binding SelectedEditingProvider.Type, Mode=TwoWay}"
                                          Margin="0,0,0,15"/>

                                <TextBlock Text="Base URL" Foreground="#888" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedEditingProvider.BaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"
                                         ToolTip="E.g. https://api.openai.com/v1"/>

                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="API Key" Foreground="#888"/>
                                    <Button Command="{Binding OpenApiKeyUrlCommand}" CommandParameter="{Binding SelectedEditingProvider}"
                                            Content="Get your API key →" Foreground="#007AFF" Background="Transparent" BorderThickness="0" 
                                            FontSize="11" Cursor="Hand" HorizontalAlignment="Right"
                                            Visibility="{Binding IsApiKeyUrlSupported, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <PasswordBox converters:PasswordBoxHelper.BindPassword="True"
                                                 converters:PasswordBoxHelper.BoundPassword="{Binding SelectedEditingProvider.ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 VerticalContentAlignment="Center"/>
                                                 
                                    <Button Grid.Column="1" Command="{Binding PasteApiKeyCommand}" CommandParameter="{Binding SelectedEditingProvider}"
                                            Content="Paste" Margin="10,0,0,0" Padding="12,5" Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid> 

                                <TextBlock Text="Capabilities" Foreground="#007AFF" FontWeight="Bold" Margin="0,10,0,10"/>
                                <CheckBox IsChecked="{Binding SelectedEditingProvider.IsTranscriptionEnabled, Mode=TwoWay}" Content="Available for Transcription" Foreground="White" Margin="0,0,0,10"/>
                                <CheckBox IsChecked="{Binding SelectedEditingProvider.IsRefinementEnabled, Mode=TwoWay}" Content="Available for Post-Processing (Refinement)" Foreground="White" Margin="0,0,0,15"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Command="{Binding TestProviderCommand}" CommandParameter="{Binding SelectedEditingProvider}"
                                            Content="Test Connection" Background="#444" Foreground="White" Padding="15,6" BorderThickness="0" Margin="0,0,10,0"/>
                                    
                                    <Button Command="{Binding RemoveProviderCommand}" CommandParameter="{Binding SelectedEditingProvider}"
                                            Content="Delete" Background="#FF453A" Foreground="White" Padding="15,6" BorderThickness="0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                         
                        <TextBlock Grid.Column="1" Text="Select or add a provider to edit." Foreground="#666" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedEditingProvider}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </TabItem>

                <!-- 4. System Tab -->
                <TabItem Header="System">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="System Settings" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Customize application behavior." Foreground="#888" FontSize="12" Margin="0,0,0,20"/>

                            <TextBlock Text="Window &amp; Tray" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <CheckBox IsChecked="{Binding IsAlwaysOnTop}" Content="Always on Top" Foreground="White" Margin="0,0,0,10"/>
                            <TextBlock Text="Keep the floating widget above other windows." Foreground="#666" FontSize="11" Margin="24,0,0,10"/>
                            
                            <CheckBox IsChecked="{Binding CloseToTray}" Content="Minimize to Tray on Close" Foreground="White" Margin="0,0,0,10"/>
                            <TextBlock Text="Keep running in background when closed." Foreground="#666" FontSize="11" Margin="24,0,0,20"/>
                            
                            <TextBlock Text="Audio Feedback" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <CheckBox IsChecked="{Binding PlaySoundOnRecord}" Content="Play Sound Effects" Foreground="White" Margin="0,0,0,10"/>
                            <CheckBox IsChecked="{Binding PauseMediaOnRecording}" Content="Pause Media on Record" Foreground="White" Margin="0,0,0,20"/>

                            <TextBlock Text="Output Method" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <RadioButton GroupName="InjectionModeSystem" Content="Type (Simulate Keystrokes)" Foreground="White" Margin="0,0,0,5"
                                         IsChecked="{Binding TextInjectionMode, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"/>
                            <TextBlock Text="Simulates typing each character. Safer for some apps." Foreground="#666" FontSize="11" Margin="24,0,0,10"/>
                            
                            <RadioButton GroupName="InjectionModeSystem" Content="Paste (Clipboard Injection)" Foreground="White" Margin="0,0,0,5"
                                         IsChecked="{Binding TextInjectionMode, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"/>
                            <TextBlock Text="Pastes text instantly. Faster." Foreground="#666" FontSize="11" Margin="24,0,0,20"/>

                            <TextBlock Text="Updates" Foreground="#DDD" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Command="{Binding CheckForUpdatesCommand}" 
                                            Content="{Binding UpdateStatus}"
                                            IsEnabled="{Binding IsCheckingForUpdates, Converter={StaticResource InverseBoolConverter}}"
                                            Padding="15,6" Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#444"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Command="{Binding ApplyUpdateCommand}" 
                                            Content="Restart to Update"
                                            Visibility="{Binding IsUpdateReady, Converter={StaticResource BoolToVis}}"
                                            Margin="10,0,0,0" Padding="15,6" Background="#007AFF" Foreground="White" BorderThickness="0" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            
                            <!-- Download Progress -->
                            <Grid Visibility="{Binding IsCheckingForUpdates, Converter={StaticResource BoolToVis}}">
                                <ProgressBar Height="4" Background="#333" Foreground="#007AFF" 
                                             Value="{Binding UpdateDownloadProgress}" Maximum="100" BorderThickness="0">
                                    <ProgressBar.Template>
                                        <ControlTemplate TargetType="ProgressBar">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                                <Grid x:Name="PART_Track">
                                                    <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left" CornerRadius="2"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </ProgressBar.Template>
                                </ProgressBar>
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- 5. About Tab -->
                <TabItem Header="About">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <!-- App Icon and Name -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                <Image Source="/Icons/app_icon.png" Width="64" Height="64" Margin="0,0,15,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="FluentDraft" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="{Binding AppVersion, StringFormat='Version {0}'}" Foreground="#888" FontSize="13"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Description -->
                            <TextBlock Text="About Application" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="Global Voice Typing for Windows powered by AI. Record your voice with a hotkey and get instant transcription inserted anywhere." 
                                       Foreground="#CCC" TextWrapping="Wrap" Margin="0,0,0,25" LineHeight="22"/>

                            <!-- Links -->
                            <TextBlock Text="Resources" Foreground="#007AFF" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="GitHub:" Foreground="#888" Width="100"/>
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/FluentDraft/FluentDraft" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#007AFF">
                                        github.com/FluentDraft/FluentDraft
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                <TextBlock Text="License:" Foreground="#888" Width="100"/>
                                <TextBlock Text="MIT License" Foreground="#CCC"/>
                            </StackPanel>

                            <!-- Copyright -->
                            <TextBlock Text="Copyright © 2026 FluentDraft Contributors" Foreground="#666" FontSize="11"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

            </TabControl>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#202020" BorderBrush="#333" BorderThickness="0,1,0,0" Padding="20,0" CornerRadius="0,0,8,8">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,15,0,0">
                     <Button Content="⚙ Run Setup Wizard" Click="RunWizard_Click" Background="Transparent" Foreground="#666" BorderThickness="0" Cursor="Hand" ToolTip="Re-run the initial configuration wizard"/>
                 </StackPanel>

                 <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button Content="Save &amp; Close" Click="CloseButton_Click" Padding="20,8" Background="#007AFF" BorderThickness="0" Foreground="White" FontWeight="Bold" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>
